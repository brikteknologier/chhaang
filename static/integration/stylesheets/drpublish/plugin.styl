@import 'nib'

$green = #94b73e
$grey = #2b3741
$white = #fafafa
$black = #000000

global-reset()

body
  margin 0
  padding 0
  background $grey
  font-family "Proxima Nova", proxima-nova

.searchRow
  height 30px
  font-size 24px
  font-weight bold
  background $white
  color $grey
  padding 2px 5px 2px 5px
  position relative
  border-bottom 1px solid $grey
  img
    position absolute
    top 6px
  .label
    position absolute
    left 78px
    line-height initial
  .searchInputSizer
    position absolute
    margin 0
    top 0
    left 160px
    right 0
    bottom 0
    overflow hidden
  input
    width 100%
    padding-left 3px
    font-size 20px
    position absolute
    margin 0
    top 0
    left 0
    right 0
    bottom 0

#searchResults
  line-height 0
  padding 1px

.thumbnail
  line-height 1em
  background $green
  display inline-block
  position relative
  padding 2px
  margin 2px
  width 153px
  height 120px
  .poster
    overflow hidden
    height 100px
    img
      width 100%
      float left
  .title
    position absolute
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    margin auto
    left 4px
    bottom 4px
    right 4px

.thumbnail:hover
    background lighten($green, 20)

.thumbnail.selected
  margin 0
  border 2px solid $white

#videoSelected
  padding 3px
  height 200px
  background $green
  position relative
  .title
    width 100%
    font-size 30px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    margin auto
  .buttons
    width 100px
    input
      width 100%
      border 1px
      font-size 14px
    input
      margin-bottom 10px
  .video
    position absolute
    left 106px
    top 35px
    right 2px
    bottom 2px
