@import 'nib'

$green = #94b73e
$grey = #2b3741
$white = #fafafa
$black = #000000

global-reset()

body
  margin 0
  padding 0
  background $grey
  font-family "Proxima Nova", proxima-nova

.searchRow
  height 30px
  font-size 24px
  font-weight bold
  background $white
  color $grey
  padding 2px 5px 2px 5px
  position relative
  img
    position absolute
    top 6px
  .label
    position absolute
    left 78px
    line-height initial
  input
    position absolute
    margin 0
    font-size 20px
    top 0
    left 160px
    right 0
    bottom 0
    width 100%
    padding-left 3px
    padding-right 3px

#searchResults
  line-height 0
  padding 1px

.thumbnail
  line-height 1em
  background $green
  display inline-block
  position relative
  padding 2px
  margin 2px
  width 140px
  height 110px
  .poster
    overflow hidden
    height 90px
    img
      width 100%
      float left
  .title
    position absolute
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    margin auto
    left 4px
    bottom 4px
    right 4px

.thumbnail:hover
    background lighten($green, 20)
