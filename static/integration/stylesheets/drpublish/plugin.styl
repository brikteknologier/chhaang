@import 'nib'

$back = #000
$text = #484

body
  background $back
  color $text
  font-family "Proxima Nova", proxima-nova

#searchResults
  line-height 0

.thumbnail
  line-height 1em
  background lighten($back, 20)
  color lighten($text, 20)
  display inline-block
  position relative
  padding 2px
  margin 2px
  width 150px
  height 150px
  img
    width 100%
    float left
  .title
    position absolute
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    margin auto
    left 3px
    bottom 2px
    right 3px

.thumbnail:hover
    background lighten($back, 40)
