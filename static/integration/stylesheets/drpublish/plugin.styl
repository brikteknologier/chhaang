@import 'nib'

$green = #94b73e
$grey = #2b3741
$white = #fafafa
$black = #000000

global-reset()

body
  margin 0
  padding 0
  font-family "Proxima Nova", proxima-nova

.searchRow
  margin-bottom 1px
  height 30px
  font-size 24px
  font-weight bold
  background $white
  position relative
  img
    position absolute
    top 6px
    right 0
  .label
    color $grey
    position absolute
    right 75px
    top 6px
    font-size 20px
    line-height initial
  .icon-search
    color $white
    background $green
    padding 5px
    text-align center
    font-size 25px
  .searchInputSizer
    position absolute
    margin 0
    top 0
    left 32px
    right 187px
    bottom 0
    overflow hidden
    min-width 100px
    border 1px solid $grey
    input
      z-index 1
      border 0
      width 100%
      padding-left 3px
      font-size 20px
      position absolute
      margin 0
      top 0
      left 0
      right 0
      bottom 0

#searchResults
  padding 1px
  color $white

.paginationButton, .result-element
  cursor pointer
  vertical-align top
  color $black

.result-element
  color $black
  margin 2px
  height 116px
  overflow hidden
  .poster
    float left
    overflow hidden
    width 150px
    img
      width 100%
    margin-right 2px
  .by-uploaded
    .label
      margin-right 5px
    position relative
    .age
      position absolute
      right 5px
    margin-bottom 2px
  .title
    font-weight bold
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    margin auto

.result-element.selected
  background darken($white, 10)

.result-element:hover
    background darken($white, 20)

.paginationButton
  background $grey
  color $white
  text-align center
  display block
  padding 5px
  margin 2px

.paginationButton:hover
  background lighten($grey, 20)

.thumbnail.selected
  margin 0
  border 2px solid $white

#videoSelected
  padding 3px
  background darken($white, 10)
  position relative
  margin-bottom 1px
  *
    text-overflow ellipsis
    overflow hidden
  .title
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    width 100%
    font-size 30px
    white-space nowrap
    overflow hidden
    margin auto
  .video
    margin-bottom 2px
  .buttons
    #insertButton
      text-decoration initial
      color $white
      background $grey
      padding 10px
      width 120px
      font-size 20px
      .icon
        padding-right 5px
    #insertButton:hover
      background lighten($grey, 20)
    line-height 40px
    .label, #insertButton, input
      margin-right 5px
    input
      width 60px
      border 1px
      font-size 14px
