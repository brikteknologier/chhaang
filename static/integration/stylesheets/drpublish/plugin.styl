@import 'nib'

$green = #94b73e
$grey = #2b3741
$white = #fafafa
$black = #000000

global-reset()

body
  margin 0
  padding 0
  font-family "Proxima Nova", proxima-nova

.searchRow
  height 30px
  font-size 24px
  font-weight bold
  background $white
  position relative
  img
    position absolute
    top 6px
    right 0
  .label
    color $grey
    position absolute
    right 75px
    top 6px
    font-size 20px
    line-height initial
  .icon-search
    color $white
    background $green
    padding 5px
    text-align center
    font-size 25px
  .searchInputSizer
    position absolute
    margin 0
    top 0
    left 32px
    right 187px
    bottom 0
    overflow hidden
    min-width 100px
    border 1px solid $grey
    input
      z-index 1
      border 0
      width 100%
      padding-left 3px
      font-size 20px
      position absolute
      margin 0
      top 0
      left 0
      right 0
      bottom 0

#searchResults
  padding 1px
  color $white

.paginationButton, .thumbnail
  background $green
  cursor pointer
  vertical-align top
  color $black

.paginationButton
  text-align center
  display block
  padding 5px
  margin 2px

.thumbnail
  margin 2px
  display inline-block
  width 156px
  height 120px
  position relative
  .poster
    overflow hidden
    height 100px
    img
      width 100%
      float left
  .title
    position absolute
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    margin auto
    left 4px
    bottom 4px
    right 4px

#insertButton
  display block
  text-decoration initial
  color $white
  background $grey
  padding 14px
  width 74px
  position absolute
  bottom 2px
  left 2px
  font-size 20px
  .icon
    padding-right 5px

#insertButton:hover
  background lighten($grey, 20)

.thumbnail:hover, .paginationButton:hover
    background lighten($green, 20)

.thumbnail.selected
  margin 0
  border 2px solid $white

#videoSelected
  padding 3px
  height 300px
  background $green
  position relative
  border-bottom 1px solid $grey
  *
    text-overflow ellipsis
    overflow hidden
  .title
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    width 100%
    font-size 30px
    white-space nowrap
    overflow hidden
    margin auto
  .author
    width 280px
    white-space nowrap
    display inline-block
  .age
    width 120px
    display inline-block
  .duration
    width 70px
    text-align right
    display inline-block
  .tags, .author, .duration, .age
    height 16px
  .tags, .age
    white-space nowrap
  .title, .description
    background lighten($green, 20)
  .description
    height 65px
    overflow hidden
  .buttons
    width 100px
    input
      width 100%
      border 1px
      font-size 14px
    input
      margin-bottom 10px
  .video
    position absolute
    left 106px
    top 135px
    right 2px
    bottom 2px
